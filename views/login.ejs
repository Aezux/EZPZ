<!-- views/login.ejs -->
<% include ./partials/header %>
<!doctype html>
<html lang="en">
<head>

	<!-- <title>EZPZ</title> -->

    <meta charset="utf-8">
    <title>Login</title>

    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            background: url(https://d2v9y0dukr6mq2.cloudfront.net/video/thumbnail/V7hRLuVqxikh75uky/abstract-light-grey-3d-polygonal-sphere-motion-background-for-modern-reports-and-presetations-4k-seamless-loop-animation-prores_r6s53tta_thumbnail-full01.png);
            background-size: cover;
            font-family: sans-serif;
        }
        .loginBox {
            position: absolute;
            top: 40%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 600px;
            height: 400px;
            padding: 45px 40px;
            box-sizing: border-box;
            background: rgba(0, 0, 0, 0.5);
        }
        .user {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            overflow: hidden;
            position: absolute;
            top: calc(-100px/2);
            left: calc(50% - 50px);
        }
        h2 {
            margin: 0;
            padding: 0 0 20px;
            color: #FFFFFF;
            text-align: center;
        }
        .loginBox p {
            margin: 0;
            padding: 0;
            font-weight: bold;
            color: #fff;
        }
        .loginBox input {
            width: 100%;
            margin-bottom: 20px;
        }
        .loginBox input[type="text"],
        .loginBox input[type="password"] {
            border: none;
            border-bottom: 1px solid #fff;
            background: transparent;
            outline: none;
            height: 40px;
            color: #fff;
            font-size: 16px;
        }
        ::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }
        .loginBox input[type="submit"] {
            border: none;
            outline: none;
            height: 40px;
            color: #fff;
            font-size: 16px;
            background: #F5845E;
            cursor: pointer;
            border-radius: 20px;
        }
        .loginBox input[type="submit"]:hover {
            background: #EB6841;
            color: #FFFFFF;
            box-shadow: 0 12px 16px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19);
        }
    </style>
</head>
<body>
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="loginBox">
            <img src="http://www.4androidapk.net/data/programs/images/unblock-websites-proxy-browser_37245.png" class="user"><br>
            <h2><span class="fa fa-user"></span> Login</h2>
            <form>
                <p>Username</p><input type="text" name="username" placeholder="Enter your username">
                <p>Password</p><input type="password" name="password" placeholder="●●●●●">
                <br><br><input type="submit" name="" value="Login">
            </form>
        </div>
    </form>
</body>
</html>
